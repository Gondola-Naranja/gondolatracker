<p id="notice"><%= notice %></p>

<h1>Beacons disponibles</h1>

<table class="table bordered-table">
  <thead>
    <tr>
      <th>Identificador</th>
      <th>Distancia</th>
      <th>RSSI</th>
      <th>Power</th>
      <th>Gondola</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beacons.each do |beacon| %>
      <tr>
        <td><%= beacon.uuid %></td>
        <td><%= beacon.distance %></td>
        <td><%= beacon.rssi %></td>
        <td><%= beacon.power %></td>
        <td><%= beacon.gondola_id %></td>
        <td><%= link_to 'Show', beacon %></td>
        <td><%= link_to 'Edit', edit_beacon_path(beacon) %></td>
        <td><%= link_to 'Destroy', beacon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beacon', new_beacon_path %>
